<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/main_template/macros/master">

  <metal:block fill-slot="main">

    <ul id="unep-language">
      <li id="unep-language-en">
        <a href="#">
          <img src="++resource++country-flags/us.gif" />
          <span>English</span>
        </a>
      </li>
      <li id="unep-language-es">
        <a href="#">
          <img src="++resource++country-flags/es.gif" />
          <span>Spanish</span>
        </a>
      </li>
      <li id="unep-language-fr">
        <a href="#">
          <img src="++resource++country-flags/fr.gif" />
          <span>French</span>
        </a>
      </li>
    </ul>
    <link rel="stylesheet" type="text/css" href="++resource++unep/language.css" />
    <script src="++resource++unep/language.js"></script>

    <form action="@@downloadszip" method="post" tal:attributes="action string:${context/absolute_url}/@@downloadszip">
      <div id="meeting-downloads">
        <tal:files repeat="section view/sections">
          <tal:maybe condition="section/files"> 
            <h2 class="" tal:attributes="class section/klass" tal:content="section/title">Section</h2>
            <table>
              <tr>
                <th>Title</th>
                <th>Select</th>
              </tr>
              <tr tal:repeat="file section/files">
                <td>
                  <a href="" tal:attributes="href file/url">
                    <strong tal:content="file/code"></strong>
                    <p tal:content="file/title"/>
                    <p tal:content="file/description"/>
                  </a>
                </td>
                <td>
                  <tal:languages repeat="lang python:['en','es','fr']">
                    <span class=""
                      tal:attributes="class python: lang in file['languages'] and 'meeting-select-'+lang or 'meeting-select-disabled meeting-select-'+lang">
                      <span tal:content="lang">lang</span>
                      <input type="checkbox" name="files" value=""
                          tal:attributes="value string:${file/uid}:${lang};" />
                    </span>
                  </tal:languages>
                </td>
              </tr>
            </table>
          </tal:maybe>
        </tal:files>
      </div>
      <div id="meeting-downloads-buttonbar">
        <button id="meeting-downloads-button">Download</button>
        <span id="meeting-downloads-number-of-documents">0</span>
        <span> items selected</span>
      </div>
      <link rel="stylesheet" type="text/css" href="++resource++unep/downloads.css" />
      <script src="++resource++unep/downloads.js"></script>
    </form>
  </metal:block>

</html>
