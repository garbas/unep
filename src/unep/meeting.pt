<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/main_template/macros/master">

  <metal:block fill-slot="main">

    <h1 class="documentFirstHeading" tal:content="context/title"></h1>

    <ul id="unep-language">
      <li id="unep-language-en">
        <a href="#">
          <img src="++resource++country-flags/us.gif" />
          <span>English</span>
        </a>
      </li>
      <li id="unep-language-es">
        <a href="#">
          <img src="++resource++country-flags/es.gif" />
          <span>Spanish</span>
        </a>
      </li>
      <li id="unep-language-fr">
        <a href="#">
          <img src="++resource++country-flags/fr.gif" />
          <span>French</span>
        </a>
      </li>
    </ul>
    <link rel="stylesheet" type="text/css" href="++resource++unep/language.css" />
    <script src="++resource++unep/language.js"></script>

    <div id="meeting-navigation">
      <h3>Navigation</h3>
      <ul>
        <li><a href="#meeting-text-announcement">Announcement</a></li>
        <li><a href="#meeting-text-information">Information note for participants</a></li>
        <li><a href="#meeting-text-other">Other</a></li>
        <li><a href="" tal:attributes="href string:${context/absolute_url}/@@downloads">Downloads</a></li>
      </ul>
    </div>

    <div id="meeting-texts">
      <h2 tal:condition="view/announcement" id="meeting-text-announcement" class="open">Announcement</h2>
      <div tal:condition="view/announcement">
        <div tal:content="structure view/announcement"></div>
        <a href="" tal:attributes="href string:${context/absolute_url}/@@downloads/${view/language}_announcement_file">Announcement attachement</a>
      </div>
      <h2 tal:condition="view/information" id="meeting-text-information">Information note for participants</h2>
      <div tal:condition="view/information">
        <div tal:content="structure view/information"></div>
        <a href="" tal:attributes="href string:${context/absolute_url}/@@downloads/${view/language}_information_file">Information note attachement</a>
      </div>
      <h2 tal:condition="view/additional" id="meeting-text-other">Other</h2>
      <div tal:condition="view/additional" tal:content="structure view/additional"></div>
    </div>
    <link rel="stylesheet" type="text/css" href="++resource++unep/meeting.css" />
    <script src="++resource++unep/meeting.js"></script>
  </metal:block>

</html>
